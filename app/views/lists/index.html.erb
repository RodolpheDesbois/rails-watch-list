<div class="banner" style="background-image: url('<%= image_path('home_banner.jpg')%>">
  <div class="container">
    <h1>Save any kind of movies <strong>Classic</strong>!</h1>
    <%= link_to 'Create a movie list', new_list_path, class:"btn btn-success" %>
  </div>
</div>

<div class="container p-5">
  <div class="container">
  <div class="row justify-content-between">
    <div class="col-4">
      <h1>My list</h1>
    </div>
  </div>
    <div class="cards">
      <% @lists.each do |list| %>
        <div class="card-category"
          style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path list.photo.key, height: 300, crop: :fill %>')">
          <%=link_to list.name, list_path(list) %>
          <%= link_to list_path(list), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} do  %>
            <i class="fa fa-trash card-category--trash" aria-hidden="true"></i>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
